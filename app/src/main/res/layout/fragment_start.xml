<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".view.StartFragment"
    android:id="@+id/constraint_layout_start_page">

    <FrameLayout
        android:id="@+id/frame_layout_start_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="625dp">

        <TextView
            android:id="@+id/textview_get_started"
            style="@style/title_one_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_x_large"
            android:layout_marginStart="-7dp"
            android:layout_marginBottom="@dimen/margin_x_large"
            android:text="@string/get_started"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageview_start_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="70dp"
            android:layout_marginTop="39dp"
            android:src="@drawable/ic_arrow_start"
            tools:ignore="MissingConstraints" />


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>