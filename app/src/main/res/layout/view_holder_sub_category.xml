<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SubCategoryViewHolder"
    android:layout_margin="8dp"
    android:id="@+id/cardview_category">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/green"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textview_subcategory_name"
            style="@style/title_two_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="SubCategory Name" />

        <ImageView
            android:id="@+id/imageview_subcategory"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="@dimen/margin_small"
            android:src="@drawable/ic_profile" />
    </LinearLayout>

</androidx.cardview.widget.CardView>