<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project1GroceryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="logo">
        <item name="fontFamily">@font/norwester</item>
        <item name="android:textSize">@dimen/logo_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_one_white">
        <item name="fontFamily">@font/norwester</item>
        <item name="android:textSize">@dimen/title_one</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_one_black">
        <item name="fontFamily">@font/norwester</item>
        <item name="android:textSize">@dimen/title_one</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_one_theme">
        <item name="fontFamily">@font/norwester</item>
        <item name="android:textSize">@dimen/title_one</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_two_theme">
        <item name="fontFamily">@font/norwester</item>
        <item name="android:textSize">@dimen/title_two</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_two_white">
        <item name="fontFamily">@font/norwester</item>
        <item name="android:textSize">@dimen/title_two</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_two_green">
        <item name="fontFamily">@font/norwester</item>
        <item name="android:textSize">@dimen/title_two</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_two_black">
        <item name="fontFamily">@font/norwester</item>
        <item name="android:textSize">@dimen/title_two</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="body_one_black">
        <item name="fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">@dimen/body_medium</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="body_two_black">
        <item name="fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">@dimen/body_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_sign_up">
        <item name="android:background">@drawable/signup_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_login">
        <item name="android:background">@drawable/login_button</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>


    <color name="gray">#363636</color>

    <style name="Theme.Project1GroceryApp.Fullscreen" parent="Theme.Project1GroceryApp">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.Project1GroceryApp.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Project1GroceryApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>